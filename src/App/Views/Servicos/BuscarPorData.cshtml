@model IEnumerable<App.ViewModels.ServicoViewModel>

@{
    ViewData["Title"] = "Buscar por data";
}

<h2>@ViewData["Title"]</h2>


<nav class="navbar">
    <form role="search" method="post">
        <div class="form-group">
            <label class="control-label"></label>
            <input type="date" class="form-control" name="minDate" />
        </div>
        <div class="form-group">
            <label class="control-label"></label>
            <input type="date" class="form-control" name="maxDate" />
        </div>
        <div class="form-group">
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </div>

    </form>
</navclass="navbar>
<h3></h3>
<table class="table table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataServico)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Apelido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataServico)
                </td>


            </tr>
    <td>
        Total = @Model.Sum(obj => obj.Valor).ToString("F2")
    </td>
    }
        </tbody>
    </table>