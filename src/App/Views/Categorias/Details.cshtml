@model App.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Detalhe da categoria - " + Model.Nome;
}

<h4>@ViewData["Title"]</h4>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
</div>
